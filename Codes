//Password validation
#include <iostream>
using namespace std;
int main(){
    string password;
    cout<<"Enter password: ";
    cin>> password;
    if(password=="Password"){
        cout<<"Access Granted";
    } else {
        cout<<"Access Denied";
    }
    return 0;
}


